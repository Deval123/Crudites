<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
	     android:orientation="vertical"
         android:clickable="true"
         android:background="@color/colorWhite"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent">
	     <RelativeLayout 
	         android:layout_width="fill_parent"
	         android:id="@+id/lll"
	         android:background="@color/colorAccent"
	         android:layout_height="?actionBarSize">
			 <ImageView
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_centerVertical="true"
				 android:src="@mipmap/ic_close_white"
				 android:id="@+id/close"
				 android:layout_alignParentLeft="true"/>
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:padding="5dip"
				 android:layout_centerInParent="true"
	             android:text="Personnalisez votre image"
		         android:layout_marginTop="10dip"
		         android:layout_marginBottom="10dip"
	             android:layout_marginLeft="5dip"
	             android:textAppearance="?android:attr/textAppearanceMedium"
	             android:textColor="#fff"/>
			 <ImageView
				 android:layout_width="40dp"
				 android:layout_height="40dp"
				 android:layout_centerVertical="true"
				 android:src="@mipmap/ic_check_white"
				 android:layout_marginRight="10dp"
				 android:id="@+id/load"
				 android:layout_alignParentRight="true"/>
	     </RelativeLayout>
	     <LinearLayout
	          android:layout_width="fill_parent"
		      android:layout_below="@+id/lll"
		      android:visibility="visible"
			 android:orientation="vertical"
			 android:background="#00151c"
		      android:id="@+id/relativeCropper"
	          android:layout_height="match_parent">
			 <com.theartofdev.edmodo.cropper.CropImageView
				 android:id="@+id/cropImageView"
				 android:layout_width="match_parent"
				 android:layout_height="0dp"
				 android:layout_weight="1"
				 app:cropAspectRatioX="1"
				 app:cropAspectRatioY="1"
				 app:cropScaleType="fitCenter"/>
		     <LinearLayout 
				 android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:background="#000000"
				 android:id="@+id/kkk"
				 android:paddingTop="10dip"
				 android:paddingBottom="10dip"
				 android:orientation="horizontal">
				 <LinearLayout
					 android:layout_width="0dp"
					 android:layout_height="wrap_content"
					 android:orientation="vertical"
					 android:id="@+id/rotate"
					 android:gravity="center"
					 android:layout_weight="1">
					 <ImageView
						 android:layout_width="wrap_content"
						 android:layout_height="30dp"
						 android:src="@android:drawable/ic_menu_rotate"/>
					 <TextView
						 android:layout_width="wrap_content"
						 android:textColor="@color/colorWhite"
						 android:layout_height="wrap_content"
						 android:textSize="9dp"
						 android:textAppearance="?android:textAppearanceSmall"
						 android:text="@string/rotation"/>
				 </LinearLayout>

				 <LinearLayout
					 android:layout_width="0dp"
					 android:layout_height="wrap_content"
					 android:orientation="vertical"
					 android:id="@+id/rogner"
					 android:gravity="center"
					 android:layout_weight="1">
					 <ImageView
						 android:layout_width="wrap_content"
						 android:layout_height="30dp"
						 android:src="@mipmap/ic_upload"/>
					 <TextView
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:textColor="#fff"
						 android:textSize="9dp"
						 android:text="@string/changer_d_image"/>
				 </LinearLayout>
		     </LinearLayout>

		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
