<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mountains"
                    android:id="@+id/image"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="-50dp"
                    android:rotation="15"
                    android:layout_marginTop="@dimen/_150sdp"
                    android:background="@color/colorWhite"/>
                <View
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_150sdp"
                    android:background="@color/colorWhite"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_210sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/colorWhite"/>
                <View
                    android:layout_width="@dimen/_500sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:rotation="15"
                    android:layout_marginTop="@dimen/_160sdp"
                    android:background="@color/colorWhite"/>
            </RelativeLayout>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_reservation_white"
                android:layout_centerHorizontal="true"
                app:fabSize="mini"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_140sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginTop="@dimen/_180sdp"
                android:id="@+id/text"
                android:layout_marginLeft="20dp"
                android:paddingRight="@dimen/_20sdp"
                android:textSize="18dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold"
                android:text="Assiettes Crudités multi saveurs"
                android:textColor="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/text"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/subtext"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textSize="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Maïs doux, Saucisson, Avocats..."
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_chevron_black"
                android:layout_below="@+id/subtext"
                android:layout_centerHorizontal="true"
                android:rotation="270"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>